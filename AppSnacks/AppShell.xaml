<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppLanches.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppLanches"
    xmlns:pages="clr-namespace:AppLanches.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#a90409"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="FloralWhite"
    Title="AppLanches">

    <TabBar>
        <Tab Title="Home" Icon="home">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}"/>
        </Tab>
        <Tab Title="Shopping cart" Icon="cart">
            <ShellContent ContentTemplate="{DataTemplate pages:ShoppingcartPage}"/>
        </Tab>
        <Tab Title="Favorites" Icon="heart">
            <ShellContent ContentTemplate="{DataTemplate pages:FavoritesPage}"/>
        </Tab>
        <Tab Title="Profile" Icon="profile">
            <ShellContent ContentTemplate="{DataTemplate pages:ProfilePage}"/>
        </Tab>
    </TabBar>

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

</Shell>
